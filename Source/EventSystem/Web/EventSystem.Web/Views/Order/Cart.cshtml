@model ShoppingCartViewModel
@{
    ViewBag.Title = "Cart";
}

<section id="shopping-cart">
    <div class="about-contentn" id="main-content">
        <div id="contact-section">
            <div id="form-content" class="col-md-6 col-md-offset-3">
                <h2>Shopping cart</h2>
                <hr />
                <div class="col-md-7 col-md-offset-4">
                    <table id="ticket-purchase" class="table table-striped table-hover ">
                        <thead>
                            <tr>

                                <th>Ticket</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Order</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderedTickets)
                            {
                                <tr class="active">
                                    <td>Regular</td>
                                    <td>@item.Price</td>
                                    <td>
                                       @item.PlaceName
                                    </td>
                                    <td>
                                        @item.EventTitle
                                    </td>

                                    <td><button data-id="@item.Id" class="btn  btn-sm">Purchase</button></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
              
            </div>
        </div>
    </div>
</section>

@section scripts{
    <script src="~/Scripts/Account/autoResizeDiv.js"></script>
}




