@using EventSystem.Web.Controllers
@using EventSystem.Web.Infrastructure.Constants

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - EventSeeker</title>
    @Styles.Render("~/styleBundles/toastr")
    @Styles.Render("~/styleBundles/theme")
    @Styles.Render("~/styleBundles/css")
</head>
<body>
    <header id="header" role="banner">
        <div class="main-nav fixed-menu animated slideInDown">
            <div class="container">
                <div class="header-top">
                    <div class="pull-right social-icons">
                        <a href="#"><i class="fa fa-twitter"></i></a>
                        <a href="#"><i class="fa fa-facebook"></i></a>
                        <a href="#"><i class="fa fa-google-plus"></i></a>
                        <a href="#"><i class="fa fa-youtube"></i></a>
                    </div>
                </div>
                <div class="row">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="~/Home">
                            <img class="img-responsive" src="~/Content/Theme/images/logo.png" alt="logo">
                        </a>
                    </div>
                    <div class="collapse navbar-collapse">
                        <ul class="nav navbar-nav navbar-right">
                            <li class="scroll">@(Html.ActionLink<HomeController>("Home", c => c.Index()))</li>
                            <li class="scroll">@(Html.ActionLink<HomeController>("About", c => c.About()))</li>
                            <li class="scroll"><a href="#event">Event</a></li>
                            <li><a class="no-scroll" href="#" target="_blank">PURCHASE TICKETS</a></li>
                            @Html.Partial(Partials._LoginPartial)
                            <li><a href="/Order/Cart" data-id="shopping-cart">@(Html.Action<OrderController>(c => c.GetShoppingCartItemsCount())) <i class="fa fa-shopping-cart"></i></a> </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!--/#header-->

    @RenderBody()

    <footer id="footer">
        <div class="container">
            <div class="text-center">
                <p> Copyright  &copy;@DateTime.UtcNow<a target="_blank" href="http://shapebootstrap.net/"> EventSeeker </a>Theme. All Rights Reserved. <br> Designed by <a target="_blank" href="http://shapebootstrap.net/">ShapeBootstrap</a></p>
            </div>
        </div>
    </footer>
    <!--/#footer-->

    <script src="http://maps.google.com/maps/api/js?key=AIzaSyAllhFsNJRffftCMsKEMdQpRkCtKmIpL4c"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/toastr")
    @Scripts.Render("~/bundles/theme")
    @RenderSection("scripts", required: false)

    @Html.Partial(Partials._Notification)
</body>
</html>
