@using System.Web.Mvc.Expressions
@using EventSystem.Web.Areas.EventMaker.Controllers

@model  EventSystem.Web.Models.Events.CreateEventViewModel

@{
    ViewBag.Title = "Create New Event";
}

@section styles{
    <link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />
}

<div id="generalTabContent" class="tab-content">
    <div id="tab-edit" class="tab-pane fade in active">
        @using (Html.BeginForm<EventsController>(c => c.Create(), FormMethod.Post, null, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="row">
                @Html.EditorFor(m => m.CategoryId)
                @Html.EditorFor(m => m.PlaceId)
                <div class="form-group">
                    <div class="col-md-2 col-md-offset-2">
                        @Html.LabelFor(m => m.EventStart)
                    </div>
                    <div class="col-md-6">
                        <div class='input-group date' id='datetimepicker1'>
                            <input type='text' name="EventStart" class="form-control" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                </div>
                <br />
                @Html.EditorFor(m => m.Title)
                @Html.EditorFor(m => m.Description)


                @Html.EditorFor(m => m.Ticket)
            </div>



            <div class="col-md-2 col-md-offset-2">
                <label for="">Images</label>
            </div>
            <hr />
            <div class="row">
                <div class="form-group">
                    <div class="col-md-8 col-md-offset-2 pull-right">
                        <a id="add-image" class="btn btn-red">Add Image</a>
                    </div>
                </div>
            </div>

            @Html.EditorFor(m => m.Files)

            <div class="row">
                <div class="form-group">
                    <div class="col-md-8 col-md-offset-2">
                        <button type="submit" class="btn btn-green btn-block">Create</button>
                    </div>
                </div>
            </div>
        }

    </div>
</div>

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script src="http://maps.google.com/maps/api/js?key=AIzaSyAllhFsNJRffftCMsKEMdQpRkCtKmIpL4c"></script>
    <script src="~/Scripts/EventMaker/Places/Create/Images.js"></script>
    <script src="~/Scripts/moment.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $('#datetimepicker1').datetimepicker();
        });
    </script>
}



