@using System.Web.Mvc.Expressions
@using EventSystem.Web.Areas.EventMaker.Controllers

@model  EventSystem.Web.Models.Places.CreatetPlaceViewModel

@{
    ViewBag.Title = "Create New Place";
}

<div id="generalTabContent" class="tab-content">
    <div id="tab-edit" class="tab-pane fade in active">
        @using (Html.BeginForm<PlacesController>(c => c.Create(), FormMethod.Post, null, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="row">
                @Html.EditorFor(m => m.CountryId)
                @Html.EditorFor(m => m.CityId)
                @Html.EditorFor(m => m.Street)

                <div id="map-control" class="form-group">
                    <label for="map" class="col-md-2 col-md-offset-2">Map</label>
                    <div class="col-md-6">
                        <div id="map" style="height:200px; width: 100%">
                            <div id="gmap-wrap">
                                <div id="gmap">
                                </div>
                            </div>
                        </div><!--/#map-->
                    </div>
                </div>

                @Html.EditorFor(m => m.Longitude)
                @Html.EditorFor(m => m.Latitude)
                @Html.EditorFor(m => m.Name)
                @Html.EditorFor(m => m.Description)
            </div>

            <div class="col-md-2 col-md-offset-2">
                <label for="">Images</label>
            </div>
            <hr />
            <div class="row">
                <div class="form-group">
                    <div class="col-md-8 col-md-offset-2 pull-right">
                        <a id="add-image" class="btn btn-red">Add Image</a>
                    </div>
                </div>
            </div>

           @Html.EditorFor(m => m.Files)

            <div class="row">
                <div class="form-group">
                    <div class="col-md-8 col-md-offset-2">
                        <button type="submit" class="btn btn-green btn-block">Create</button>
                    </div>
                </div>
            </div>
        }

    </div>
</div>

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script src="http://maps.google.com/maps/api/js?key=AIzaSyAllhFsNJRffftCMsKEMdQpRkCtKmIpL4c"></script>
    <script src="~/Scripts/EventMaker/Places/Create/maps.js"></script>
    <script src="~/Scripts/EventMaker/Places/Create/Images.js"></script>
}